@using herramientas_parcial1_OliveraJorgeDaniel.ViewModels.VehiculoViewModels;
@model VehiculoEditViewModel; 

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Vehiculo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VehiculoId" />
            <div class="form-group">
                <label asp-for="VehiculoNombre" class="control-label"></label>
                <input asp-for="VehiculoNombre" class="form-control" />
                <span asp-validation-for="VehiculoNombre" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="VehiculoApellido" class="control-label"></label>
                <input asp-for="VehiculoApellido" class="form-control" />
                <span asp-validation-for="VehiculoApellido" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="VehiculoTipo" class="control-label"></label>
                <input asp-for="VehiculoTipo" class="form-control" />
                <span asp-validation-for="VehiculoTipo" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="VehiculoMatricula" class="control-label"></label>
                <input asp-for="VehiculoMatricula" class="form-control" />
                <span asp-validation-for="VehiculoMatricula" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="VehiculoFabricacion" class="control-label"></label>
                <input asp-for="VehiculoFabricacion" class="form-control" />
                <span asp-validation-for="VehiculoFabricacion" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Guardar cambios" class="btn btn-success" />
            </div>
            <br>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
