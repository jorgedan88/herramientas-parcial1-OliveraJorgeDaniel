@using Proyect_RaceTrack.ViewModels.CocheraViewModels;
@model CocheraIndexViewModel;

@{
    ViewData["Title"] = "Index";
}

<h1>Cocheras</h1>

<p>
    <a asp-action="Create" class="btn btn-success">+ Cochera</a>
</p>

<div class="row">
    <form method="get" asp-action="Index" asp-controller="Cochera">
        <div class="col-6 form-group">
            <input class="form-control" asp-for="NameFilterCoc" />
        </div>
        <br>
        <button class="btn btn-info" type="submit">Buscar</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CocheraNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CocheraNumero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CocheraSector)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CocheraAptoMantenimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CocheraOficinas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.cocheras)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CocheraNombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CocheraNumero)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CocheraSector)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CocheraAptoMantenimiento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CocheraOficinas)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CocheraId" class="btn btn-warning">Modificar</a>
                    <a asp-action="Details" asp-route-id="@item.CocheraId" class="btn btn-primary">Detalle</a>
                    <a asp-action="Delete" asp-route-id="@item.CocheraId" class="btn btn-danger"
                        onclick="return confirm('Â¿Esta seguro que quiere eliminar a este piloto?')">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
