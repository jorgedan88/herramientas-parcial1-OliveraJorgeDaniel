@using Proyect_RaceTrack.ViewModels.PistaViewModels;
@model PistaIndexViewModel;

@{
    ViewData["Title"] = "Index";
}

<h1>Pistas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">+ Pista</a>
</p>

<div class="row">
    <form method="get" asp-action="Index" asp-controller="Pista">
        <div class="col-6 form-group">
            <input class="form-control" asp-for="NameFilterPista" />
        </div>
        <br>
        <button class="btn btn-info" type="submit">Buscar</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PistaNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PistaCodigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PistaMaterial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PistaIluminacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PistaAprovisionamiento)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.pistas) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PistaNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PistaCodigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PistaMaterial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PistaIluminacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PistaAprovisionamiento)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.PistaId" class="btn btn-warning">Modificar</a> 
                    <a asp-action="Details" asp-route-id="@item.PistaId" class="btn btn-primary">Detalle</a>
                    <a asp-action="Delete" asp-route-id="@item.PistaId" class="btn btn-danger">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
